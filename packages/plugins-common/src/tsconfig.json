{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/",
    "declaration": true,
    // Removes DOM types.
    "lib": ["ES2019"],
    // Required by Rollup (consumed by Rollup in the *-plugin packages).
    "module": "esnext",
    "sourceMap": true,
    // Avoids conflicting global definitions from, e.g., jasmine.
    "types": ["node"]
  },
  "include": ["."]
}
