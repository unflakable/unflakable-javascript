{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "declaration": true,
    // Required by Rollup.
    "module": "esnext",
    // Ensure Rollup build fails if there are type errors.
    "noEmitOnError": true,
    // Removes DOM types.
    "lib": ["ES2019"],
    // Avoids conflicting global definitions from, e.g., jasmine.
    "types": ["node", "jest"],
    // Some versions of Jest (e.g., 28.0.0) have internally broken types.
    "skipLibCheck": true
  },
  "include": [
    ".eslintrc.js",
    "src",
    "test/.eslintrc.js",
    "rollup.config.mjs",
    "window.d.ts"
  ]
}
